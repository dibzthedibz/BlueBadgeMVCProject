@model IEnumerable<WOTMVC.Models.CharacterMods.CharacterListItem>

@{
    ViewBag.Title = "Index";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/objIndex.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <title>Dibz</title>
</head>
<body>
    <div class="container-fluid padding">
        <div class="row welcome text-center">
            <div class="col-lg-12 caption">
                <h1 class="display-2">Wheel of Time</h1>
                <h3 class="display-2">Characters</h3>
            </div>
        </div>
    </div>

    <div class="container-fluid padding">
        <div class="row text-center padding">
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-4 d-flex justify-content-around">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="@Url.Content(item.Image)" id="bookimg"/>
                            </div>
                            <div class="flip-card-back">
                                <h1>@Html.DisplayFor(model => item.FullName)</h1>
                                <p>Ability: @Html.DisplayFor(model => item.Ability)</p>
                                <p>Home State: @Html.DisplayFor(model => item.Birthplace)</p>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>

